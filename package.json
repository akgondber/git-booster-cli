{
	"name": "git-booster-cli",
	"description": "Improve your git workflow with customizable and runnable blocks",
	"version": "1.0.0",
	"license": "MIT",
	"bin": {
		"git-booster-cli": "dist/cli.js",
		"gbc": "dist/cli.js",
		"git-booster": "dist/cli.js",
		"gbcli": "dist/cli.js",
		"gibo": "dist/cli.js",
		"gbstr": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"lint": "xo",
		"go": "node dist/cli.js",
		"prettify": "prettier . --write",
		"xofix": "xo --fix"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"execa": "^8.0.1",
		"figures": "^5.0.0",
		"ink": "^4.2.0",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^5.0.1",
		"meow": "^12.0.1",
		"nanoid": "^5.0.1",
		"ramda": "^0.29.0",
		"range-stepper": "^1.5.1",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^4.0.0",
		"@types/ink-testing-library": "^1.0.1",
		"@types/ramda": "^0.29.4",
		"@types/react": "^18.0.32",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^3.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.56.0"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off",
			"react/hook-use-state": "off",
			"n/prefer-global/process": "off"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"bracketSpacing": false,
		"arrowParens": "avoid",
		"trailingComma": "all"
	},
	"keywords": [
		"blocks",
		"boost",
		"booster",
		"cli",
		"commit",
		"git",
		"git-blocks",
		"git-boost",
		"git-booster",
		"gitflow",
		"groupedcommands",
		"performance",
		"productivity",
		"push",
		"reset",
		"tui",
		"workflow"
	]
}
